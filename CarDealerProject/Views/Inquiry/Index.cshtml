@model List<CarDealerProject.Data.Models.Inquiry>

@{
    ViewData["Title"] = "All Inquiries";
}

<h2>All Car Inquiries</h2>

@if (Model.Count == 0)
{
    <p>No inquiries yet.</p>
}
else
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Car</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inquiry in Model)
            {
                <tr>
                    <td>@inquiry.Name</td>
                    <td>@inquiry.Email</td>
                    <td>@inquiry.Message</td>
                    <td>@inquiry.Car?.Make @inquiry.Car?.Model</td>
                </tr>
            }
        </tbody>
    </table>
}
